schema_version: 1.0

issue_id: CPP_NAMESPACE_NOT_DECLARED_001
title: "std:: namespace not declared"

category: programming
subcategory: cpp
severity: error
confidence: high

scope:
  machine: generic
  environment: linux
  os: generic

error_signature:
  type: regex
  pattern: "std:: has not been declared"

description: >
  Compilation fails because the std namespace is not recognized.

root_cause:
  summary: Missing include or namespace usage
  details: >
    Standard library headers may be missing or std:: prefix not used.

resolution:
  strategy: manual
  risk_level: low
  steps:
    - "# Ensure correct standard header is included"
    - "# Example: #include <iostream>"

    - "# Use std:: prefix for standard symbols"
    - "# Example: std::cout"

    - "# Alternatively, use namespace std (not recommended in headers)"
    - "# using namespace std;"

verification:
  success_criteria:
    - compilation succeeds

